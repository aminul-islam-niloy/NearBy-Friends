

 @{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row p-3">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="UserInput" placeholder="You : " aria-label="User">
            </div>
        
            <div class="card">
                <div class="card-body" id="messageContainer" style="height: 400px; overflow-y: scroll;">
                    <ul class="list-unstyled" id="messageList"></ul>
                </div>
            </div>

        </div>
        <div class="col-12 col-md-8 offset-md-2">

            <div class="input-group mb-3">
                <input type="text" class="form-control" id="messageInput" placeholder="Enter your message" aria-label="Message">
                <div class="input-group-append " style="margin-left:10px">
                    <button class="btn btn-primary " id="sendButton" type="button">Send</button>
                </div>
            </div>
        </div>




    </div>
</div>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
